		rightSyntCard: "-Gdl120d,$correct900,$correct800 -Gdl120d,$correct850,$correct750_h",
		syntCardHeader: "M0 C-$accent900 P3u;0",
		syntCardPoint:"Ps-r P1u;5u Lnh1.5 C-red_b Fns3u_b D-ib_b Ps-a_b T1u_b L0_b",
		syntCardList:"M0 P1u Fns3.2u Lsst-n Flg0 Grs2 Gre3",
		syntCardHead:"Flg1 Grs1 Gre2 W100p",

	}
%>

<section id="examples"
	class="
		Bgc-$core700 C-$accent900">

	<div class="W90p D-f M-a Jc-c Ai-c Fld-c P12u;0">
		<h2 class="M0 Txa-c P5u;0;2u Fns7u">
			Simplicity in action
		</h2>

		<p class="M0 C-$accent850 Txa-c P1u;3u md_Mxw60vw lg_Mxw40vw">
			See how mlut compares to other frameworks with better naming conventions and ergonomics
		</p>

		<article class="W100p">

			<h3 class="<%= it.examplesCSS.h3%> P12u;0;9u">
				Strong naming conventions
			</h3>

			<div class="<%= it.examplesCSS.articleContent%>">
				<div class="<%= it.examplesCSS.syntCard %> <%= it.examplesCSS.wrongSyntCard %>">
					<div class="<%=it.examplesCSS.syntCardHead%>">
						<h4 class="<%= it.examplesCSS.syntCardHeader%>">
							Tailwind CSS
						</h4>
						<%- include('./_includes/components/code-block.ejs', {
							src: "./code-samples/tw1.ejs",
							lang: "html",
						})%>
					</div>

					<ul class="<%= it.examplesCSS.syntCardList%>">
						<li class="<%= it.examplesCSS.syntCardPoint%> Ct-'❌'_b ">
							<span class="<%= it.css.codeWord %>"> flex</span> => <span class="<%= it.css.codeWord %>"> display: flex</span>, but <span class="<%= it.css.codeWord %>"> flex-auto </span> => <span class="<%= it.css.codeWord %>"> flex:1 1 auto</span>
						</li>
						<li class="<%= it.examplesCSS.syntCardPoint%> Ct-'❌'_b ">
							<span class="<%= it.css.codeWord %>"> bg-none</span> => reset all backgrounds? Nope, only <span class="<%= it.css.codeWord %>"> background-image</span>
						</li>
					</ul>
				</div>

				<div class="<%= it.examplesCSS.syntCard %> <%= it.examplesCSS.wrongSyntCard %>">
					<div class="<%=it.examplesCSS.syntCardHead%>">
						<h4 class="<%= it.examplesCSS.syntCardHeader%>"> Tachyons</h4>
						<%- include('./_includes/components/code-block.ejs', {
							src: "./code-samples/tc1.ejs",
							lang: "html"
						})%>
					</div>

					<ul class="<%= it.examplesCSS.syntCardList%>">
						<li class="<%= it.examplesCSS.syntCardPoint%> Ct-'❌'_b ">
							<span class="<%= it.css.codeWord %>"> br-0 </span> => <span class="<%= it.css.codeWord %>"> border-right-width: 0</span>, but <span class="<%= it.css.codeWord %>"> br1 </span> => <span class="<%= it.css.codeWord %>"> border-radius: .125rem</span>
						</li>
						<li class="<%= it.examplesCSS.syntCardPoint%> Ct-'❌'_b ">
							<span class="<%= it.css.codeWord %>"> b</span> => bottom, border, or <span class="<%= it.css.codeWord %>"> display: block</span>? No, it's <span class="<%= it.css.codeWord %>"> font-weight: bold</span>
						</li>
					</ul>
				</div>

				<div class="<%= it.examplesCSS.syntCard %> <%= it.examplesCSS.rightSyntCard %>">
					<div class="<%=it.examplesCSS.syntCardHead%>">
						<h4 class="<%= it.examplesCSS.syntCardHeader%>"> mlut CSS</h4>
						<%- include('./_includes/components/code-block.ejs', {
							src: "./code-samples/mlut1.ejs",
							lang: "html"
						})%>
					</div>

					<ul class="<%= it.examplesCSS.syntCardList%>">
						<li class="<%= it.examplesCSS.syntCardPoint%> Ct-'✅'_b">
							<span class="<%= it.css.codeWord %>"> Jc-c </span> => <span class="<%= it.css.codeWord %>"> justify-content: center</span> and <span class="<%= it.css.codeWord %>"> Js-c </span> => <span class="<%= it.css.codeWord %>"> justify-self: center</span>
						</li>
						<li class="<%= it.examplesCSS.syntCardPoint%> Ct-'✅'_b">
							<span class="<%= it.css.codeWord %>"> Bdr</span> => <span class="<%= it.css.codeWord %>"> border-right: 1px solid</span> and <span class="<%= it.css.codeWord %>"> Bdrd1</span> => <span class="<%= it.css.codeWord %>"> border-radius: 1px</span>
						</li>
					<ul>
				</div>


			</div>
		</article>

		<article class="W100p">

			<h3 class="<%= it.examplesCSS.h3%>">
				Compactness and elegance in the flesh
			</h3>
			<div class="<%= it.examplesCSS.articleContent%>">

				<div class="D-f Fld-c Jc-c Ai-s Gap5u W100p md_W45p Mxw125u H100p">
					<p class="M0 P0;0;3u C-$accent850 Fns4u md_Fns5u Lnh1.5">
