						<%- include('./_includes/components/code-block',{
							src: "./code-samples/mlut2.ejs",
							lang: "html",
						}) %>
					</div>
				</div>

				<div class="D-f Fld-c Jc-c Ai-c W100p md_W45p Mxw125u ">
					<div class="W100p P2u Tsd-$longTs H100p Tf_h -Sx105p_h -Sy105p_h Bdrd2u Bd1;s;$accent850 <%= it.examplesCSS.wrongSyntCard %> 	">
							<h4 class="M0 P2u;0"> Regular CSS</h4>
							<div class="">
								<%- include('./_includes/components/code-block',{
									src: "./code-samples/regcss1.ejs",
									lang: "html",
								}) %>
							</div>
					</div>
				</div>
			</div>

		</article>

		<article class="W100p">
			<h3 class="<%= it.examplesCSS.h3%>">
				Install and customize
			</h3>
			<div class="Gap5u W100p M-a Mxw175u">
				<ul class="Lsst-n P0 M0">
					<li class="Ps-r P1u;5u Lnh1.5 C-$accent850">
