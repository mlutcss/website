<%# Features section %>

<section id="features" class="Bgc-$core550 C-$accent900 P5u;0">

	<div class="W90p D-f M-a Jc-c Ai-c Fld-c P12u;0">
		<h2 class="Txa-c M0;0;5u Fns7u">
			Why choose mlut?
		</h2>

		<p class="M0 C-$accent850 Txa-c M1u;0 P0;3u">
			We've build a framework that solves real developer problems
		</p>

		<%# Feature cards %>

		<div class="D-f Fld-r Flw-w Jc-c Ai-s Gap5u M5u;0 Tsd-$longTs " >
			<%
				for (let card of it.features) {
			%>
				<%- include('./_includes/components/card.ejs', {
					title: card.title,
					text: card.text,
					img: card.img,
					bg: card.bg,
					bgH: card.bgH,
					imgBg: card.imgBg,
					headC: card.headC,
					textC: card.textC
				}) %>

			<% } %>
		</div>

		<div class="M3u;0 Fns3.2u W100p Mxw62u">
			<%- include('./_includes/components/link-button.ejs',{
				url: "https://mlutcss.github.io/mlut/",
				text: "Learn more",
				icon: "right-triangle"
			}) %>
		</div>
	</div>

</section>


<%# Examples Section %>

<%
	const examplesCSS = {
		h3: "C-$brand Txa-c W90p Fns6u M0;a;9u",
		articleContent:"D-f Fld-r Jc-c Flw-w Gap5u W90p M0;a;12u",
		syntCard: "W100p Mxw35gg md_W40p lg_W31p P2u Tsd-$longTs Tf_h -S105p_h Bdrd2u Bd1;s;$accent850 D-f Fld-c Jc-fs Ai-c",
		wrongSyntCard: "-Gdl120d,$wrong900,$wrong800 -Gdl120d,$wrong850,$wrong750_h",
		rightSyntCard: "-Gdl120d,$correct900,$correct800 -Gdl120d,$correct850,$correct750_h",
		syntCardHeader: "C-$accent900 M0;0;3u",
		syntCardPoint:"Ps-r D W100p Mb2u P0;5u Lnh1.5 C-red_b Fns3u_b D-ib_b Ps-a_b T0_b L0_b",
		syntCardList:"Mb1u P0;1u Fns3.2u Lsst-n Flg1",
		syntCardHead:"Flg0 Pt3u W100p Mb1u",
		compactCard:"D-f Mxw35gg Fld-c Jc-c Ai-s Gap5u W100p md_W45p ",
		compactCode:"W100p P3u;2u Tsd-$longTs Tf_h -S105p_h Bdrd2u Bd1;s;$accent850",
		compactH4:"M0;0;3u",
		installLi:"Ps-r M0;0;5u P0;5u Lnh1.5 C-$accent850",
		codeWord: "Bgc-$core800 P0.3u;1u",
		installText:"M0;0;5u"
	}
%>

<section id="examples" class="Bgc-$core700 C-$accent900 P15u;0;0">

	<div class="W90p D-f M-a Jc-c Ai-c Fld-c P0">
		<h2 class="Txa-c M0;0;5u Fns7u">
			Simplicity in action
		</h2>

		<p class="C-$accent850 Txa-c M0;0;6u P0;3u md_Mxw60vw lg_Mxw40vw">
			See how mlut compares to other frameworks with better naming conventions and ergonomics
		</p>

		<%# Naming conventions part%>

		<article class="W100p">

			<h3 class="<%= examplesCSS.h3%>">
				Strong naming conventions
			</h3>

			<div class="<%= examplesCSS.articleContent%> Ai-s">

				<%# Tailwind card %>

				<div class="<%= examplesCSS.syntCard %> <%= examplesCSS.wrongSyntCard %>">
					<div class="<%=examplesCSS.syntCardHead%>">
						<h4 class="<%= examplesCSS.syntCardHeader%>">
							Tailwind CSS
						</h4>
						<%- include('./_includes/components/code-block.ejs', {
							src: "./code-samples/tw1.ejs",
							lang: "html",
						})%>
					</div>

					<ul class="<%= examplesCSS.syntCardList%>">
						<li class="<%= examplesCSS.syntCardPoint%> Ct-'❌'_b ">
							<span class="<%= examplesCSS.codeWord %>"> flex</span> => <span class="<%= examplesCSS.codeWord %>"> display: flex</span>, but <span class="<%= examplesCSS.codeWord %>"> flex-auto</span> => <span class="<%= examplesCSS.codeWord %>"> flex:1 1 auto</span>
						</li>
						<li class="<%= examplesCSS.syntCardPoint%> Ct-'❌'_b ">
							<span class="<%= examplesCSS.codeWord %>"> bg-none</span> => reset all backgrounds? Nope, only <span class="<%= examplesCSS.codeWord %>"> background-image</span>
						</li>
						<li class="<%= examplesCSS.syntCardPoint%> Ct-'❌'_b ">
							very long <span class="<%= examplesCSS.codeWord %>"> class</span> attributes for complex styles
						</li>
					</ul>
				</div>

				<%# Tachyons card%>

				<div class="<%= examplesCSS.syntCard %> <%= examplesCSS.wrongSyntCard %>">
					<div class="<%=examplesCSS.syntCardHead%>">
						<h4 class="<%= examplesCSS.syntCardHeader%>"> Tachyons</h4>
						<%- include('./_includes/components/code-block.ejs', {
							src: "./code-samples/tc1.ejs",
							lang: "html"
						})%>
					</div>

					<ul class="<%= examplesCSS.syntCardList%>">
						<li class="<%= examplesCSS.syntCardPoint%> Ct-'❌'_b ">
							<span class="<%= examplesCSS.codeWord %>"> br-0</span> => <span class="<%= examplesCSS.codeWord %>"> border-right-width: 0</span>, but <span class="<%= examplesCSS.codeWord %>"> br1</span> => <span class="<%= examplesCSS.codeWord %>"> border-radius: .125rem</span>
						</li>
						<li class="<%= examplesCSS.syntCardPoint%> Ct-'❌'_b ">
							<span class="<%= examplesCSS.codeWord %>"> b</span> => bottom, border, or <span class="<%= examplesCSS.codeWord %>"> display: block</span>? No, it's <span class="<%= examplesCSS.codeWord %>"> font-weight: bold</span>
						</li>
						<li class="<%= examplesCSS.syntCardPoint%> Ct-'❌'_b ">
							need a custom <span class="<%= examplesCSS.codeWord %>"> bg-none</span> class to have <span class="<%= examplesCSS.codeWord %>"> background-image: none</span> style
						</li>
					</ul>
				</div>

				<%# mlut card %>

				<div class="<%= examplesCSS.syntCard %> <%= examplesCSS.rightSyntCard %>">
					<div class="<%=examplesCSS.syntCardHead%>">
						<h4 class="<%= examplesCSS.syntCardHeader%>"> mlut CSS</h4>
						<%- include('./_includes/components/code-block.ejs', {
							src: "./code-samples/mlut1.ejs",
							lang: "html"
						})%>
					</div>

					<ul class="<%= examplesCSS.syntCardList%>">
						<li class="<%= examplesCSS.syntCardPoint%> Ct-'✅'_b">
							<span class="<%= examplesCSS.codeWord %>"> Jc-c</span> => <span class="<%= examplesCSS.codeWord %>"> justify-content: center</span> and <span class="<%= examplesCSS.codeWord %>"> Js-c</span> => <span class="<%= examplesCSS.codeWord %>"> justify-self: center</span>
						</li>
						<li class="<%= examplesCSS.syntCardPoint%> Ct-'✅'_b">
							<span class="<%= examplesCSS.codeWord %>"> Bdr</span> => <span class="<%= examplesCSS.codeWord %>"> border-right: 1px solid</span> and <span class="<%= examplesCSS.codeWord %>"> Bdrd1</span> => <span class="<%= examplesCSS.codeWord %>"> border-radius: 1px</span>
						</li>
						<li class="<%= examplesCSS.syntCardPoint%> Ct-'✅'_b">
							fits well with the traditional CSS syntax
						</li>
					<ul>
				</div>

			</div>
		</article>

		<%# Compactness comparison%>

		<article class="W100p">

			<h3 class="<%= examplesCSS.h3%>">
				Compactness and elegance in the flesh
			</h3>
			<p class="M0;a;5u P0;5u C-$accent850 Fns4u md_Fns5u Lnh1.5 md_W80p">
				See how much more code you need to write in default CSS to reproduce the same styles written in <span class="Fnw-b C-$brand"> mlut </span>
			</p>

			<div class="<%= examplesCSS.articleContent%> Ai-fs">

				<%# mlut card %>


				<div class="<%= examplesCSS.compactCard%>">
					<div class="<%=examplesCSS.compactCode%> <%= examplesCSS.rightSyntCard %> 	">
						<h4 class="<%=examplesCSS.compactH4%>"> mlut CSS</h4>
						<%- include('./_includes/components/code-block',{
							src: "./code-samples/mlut2.ejs",
							lang: "html",
						}) %>
					</div>
				</div>

				<%# Traditional CSS card%>

				<div class="<%= examplesCSS.compactCard%>">
					<div class="<%=examplesCSS.compactCode%> <%= examplesCSS.wrongSyntCard %> H100p">
						<h4 class="<%=examplesCSS.compactH4%>"> Traditional CSS</h4>
							<%- include('./_includes/components/code-block',{
								src: "./code-samples/regcss1.ejs",
								lang: "html",
							}) %>
					</div>
				</div>
			</div>

		</article>

		<%# Installation part %>

		<article class="W100p Mb9u">
			<h3 class="<%= examplesCSS.h3%>">
				Install and customize
			</h3>
			<div class="Gap5u W100p M-a Mxw175u">
				<ul class="Lsst-n P0 M0">
					<li class="<%=examplesCSS.installLi%>">
						<p class="<%= examplesCSS.installText %>">
							✅ Install via npm
						</p>
						<%- include('./_includes/components/code-block',{
							src: "./code-samples/bash1.ejs",
							lang: "bash",
						}) %>
					</li>
					<li class="<%=examplesCSS.installLi%>">
						<p class="<%= examplesCSS.installText %>">
							✅ And configure by yourself
						</p>
						<%- include('./_includes/components/code-block',{
							src: "./code-samples/scss1.ejs",
							lang: "scss",
						}) %>
					</li>
				</ul>
			</div>

		</article>


		<div class="Mb9u Fns3.2u W100p Mxw62u">
			<%- include('./_includes/components/link-button.ejs',{
				url: "https://mlutcss.github.io/mlut/",
				text: "Try now",
				icon: "right-triangle"
			}) %>
		</div>

	</div>
</section>

